= form_with(model: production, class: 'ui form') do |form|
  - if production.errors.any?
    .ui.message.error.visible
      %h2
        = pluralize(production.errors.count, "error")
        prohibited this production from being saved:
      %ul
        - production.errors.each do |error|
          %li= error.full_message
  
  .field
    = form.label :name, style: "display: block"
    = form.text_field :name
  
  -# .field
  -#   = form.label :user_id, style: "display: block"
  -#   = form.collection_select :user_id, current_tenant.users.all, :id, :email
  
  .actions
    = form.submit class: 'ui button primary'
    or
    = link_to "go back", production, class: 'ui button tertiary'    
